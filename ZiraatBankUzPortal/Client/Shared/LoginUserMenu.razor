@inject IStringLocalizer<LoginUserMenu> _localizer
<AuthorizeView>
    <Authorized>
        <MudMenu Class="pa-2">
            <ActivatorContent>
                <MudAvatar Image="images/toiletvisit.jpg" />
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem OnClick="Logout">@_localizer["LogOut"]</MudMenuItem>
            </ChildContent>
        </MudMenu>
    </Authorized>
</AuthorizeView>

@code {
    public async Task Logout()
    {
        await _localStorage.RemoveItemAsync("token");
        await _authStateProvider.GetAuthenticationStateAsync();
        _navigationManager.NavigateTo("/login");
    }
}
