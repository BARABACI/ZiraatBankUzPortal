@page "/transactioncancel"
<br />
<AuthorizeView Roles="@_pageRoles">
    <Authorized>
        <EditForm Model="@transactionModel" OnValidSubmit="@HandleValidSubmit" Context="bindContext">
        <MudGrid>
            <MudItem xs="12" md="12">
                <MudPaper Class="pa-8 ma-2" Elevation="3">
                    <MudGrid>
                        <MudItem xs="12" md="11">
                            <MudNumericField HideSpinButtons="true" @bind-Value="transactionModel.transActionId" Label="Transaction Id" Margin="Margin.Dense" Variant="Variant.Outlined" Required="true" RequiredError="Transaction no is required!"></MudNumericField>
                        </MudItem>
                        <MudItem xs="12" md="1">
                            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Settings" ButtonType="ButtonType.Submit" >EXECUTE</MudButton>
                        </MudItem>
                    </MudGrid>
                </MudPaper>
            </MudItem>
        </MudGrid>
        </EditForm>
    </Authorized>
    <NotAuthorized>
        <NotAccess />
    </NotAuthorized>
</AuthorizeView>
