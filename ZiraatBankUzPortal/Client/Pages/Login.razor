@page "/login"
@inject HttpClient Http
@attribute [AllowAnonymous]
@layout SimpleLayout
@inject IStringLocalizer<Login> _localizer
<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
    <MudPaper Elevation="25" Class="pa-9" Style="width: 450px;">
        <EditForm Model="@user" OnValidSubmit="HandleLogin">
            <MudGrid>
                <DataAnnotationsValidator />
                <MudItem xs="1" Class="align-content-center">
                        <MudImage Src="images/only-logo-ziraat.png" Height="40" />
                    </MudItem>
                    <MudItem xs="11">
                        <MudText Align="Align.Center" Typo="Typo.h4"> @_localizer["UserLogin"]</MudText>
                    </MudItem>
                <MudItem xs="12">
                    <MudTextField T="string" Label="@_localizer["UserName"]" Variant="Variant.Outlined"
                                  @bind-Value="user.UserName" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField Label="@_localizer["Password"]" Variant="Variant.Outlined"
                                  @bind-Value="user.Password" InputType="InputType.Password" />
                </MudItem>
                <MudItem xs="12" Class="d-flex justify-center">
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Success" Size="Size.Large" Style="width: 100%;">@_localizer["SignIn"]</MudButton>
                </MudItem>
            </MudGrid>
        </EditForm>
    </MudPaper>
</MudContainer>

@code {
    DisplayLoginUserModel user = new DisplayLoginUserModel();
    protected override async Task OnInitializedAsync()
    {
        var state = await _authStateProvider.GetAuthenticationStateAsync();
        var user = new ClaimsPrincipal(state.User.Identity);
        if (user.Identity.IsAuthenticated)
        {
            _navigationManager.NavigateTo("/");
        }
    }
    async Task HandleLogin()
    {
        user = await Http.GetFromJsonAsync<DisplayLoginUserModel>("api/UserLogin/" + user.UserName + "/" + user.Password);

        if (user.UserName != "" && user.Password != "")
        {
            var token = user.AccessToken;
            await _localStorage.SetItemAsync("token", token);
            await _authStateProvider.GetAuthenticationStateAsync();
            _navigationManager.NavigateTo("/");
        }


    }
}
